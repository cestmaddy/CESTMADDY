{
	"name": "cestmaddy",
	"version": "1.0.0",
	"description": "A light and powerful CMS, for developers.",
	"main": "dist/core/main.js",
	"repository": "https://git.chevro.fr/cestmaddy/cestmaddy",
	"author": "Olivier Cartier <me@cestoliv.com>",
	"license": "MIT",
	"scripts": {
		"start": "node dist/core/server.js",
		"start:watch": "nodemon --delay 2 dist/core/server.js",
		"start:dev": "npm run build && concurrently -k -n build,compile,start,assets \"npm run build:watch\" \"npm run compile:watch\" \"npm run start:watch\" \"npm run assets:watch\"",
		"build": "rimraf dist && tsc",
		"build:watch": "tsc -w",
		"assets": "cpx \"core/**/!(*.ts)\" dist/core && cpx \"cestici/**/!(*.ts)\" dist/cestici",
		"assets:watch": "concurrently \"cpx \\\"core/**/!(*.ts)\\\" dist/core -w\" \"cpx \\\"cestici/**/!(*.ts)\\\" dist/cestici -w\"",
		"compile": "npm run assets; node dist/core/scripts/generation/build.js",
		"compile:dev": "node dist/core/scripts/generation/build.js",
		"compile:watch": "chokidar -t 5000 \"dist/**/*\" --ignore \"dist/cestici/generated/**/*\" -c 'npm run compile:dev'",
		"test": "TEST=1 mocha -r ts-node/register tests/**/*.test.ts",
		"test:coverage": "nyc npm test",
		"test:format": "prettier --write \"**/*.ts\"",
		"test:lint": "eslint --fix \"**/*.ts\""
	},
	"bin": "./dist/core/bin/cli.js",
	"dependencies": {
		"colorette": "^2.0.20",
		"dotenv": "^16.0.3",
		"ejs": "^3.1.9",
		"express": "^4.18.2",
		"express-interceptor": "^1.2.0",
		"get-audio-duration": "^3.1.1",
		"glob": "^10.2.5",
		"http-proxy-middleware": "^2.0.6",
		"imagemagick": "^0.1.3",
		"iso-639-1": "^2.1.15",
		"js-yaml": "^4.1.0",
		"json5": "^2.2.3",
		"luxon": "^3.3.0",
		"marked": "^5.0.2",
		"marked-highlight": "^2.0.0",
		"mime-types": "^2.1.35",
		"prismjs": "^1.29.0",
		"shelljs": "^0.8.5",
		"slugify": "^1.6.6",
		"svgo": "^3.0.2"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/chai": "^4.3.5",
		"@types/ejs": "^3.1.2",
		"@types/express": "^4.17.17",
		"@types/imagemagick": "^0.0.31",
		"@types/js-yaml": "^4.0.5",
		"@types/luxon": "^3.3.0",
		"@types/marked": "^5.0.0",
		"@types/mime-types": "^2.1.1",
		"@types/mocha": "^10.0.1",
		"@types/mock-fs": "^4.13.1",
		"@types/node": "^20.2.1",
		"@types/prismjs": "^1.26.0",
		"@types/request-ip": "^0.0.37",
		"@types/shelljs": "^0.8.12",
		"@typescript-eslint/eslint-plugin": "^5.59.6",
		"chai": "^4.3.7",
		"chokidar-cli": "^3.0.0",
		"concurrently": "^8.0.1",
		"cpx2": "^4.2.3",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"memfs": "^3.5.1",
		"mocha": "^10.2.0",
		"mock-fs": "^5.2.0",
		"nodemon": "^2.0.22",
		"nyc": "^15.1.0",
		"prettier": "^2.8.8",
		"rimraf": "^5.0.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"check-coverage": true,
		"all": true,
		"include": [
			"core/**/*.ts",
			"cestici/**/*.ts"
		],
		"exclude": [
			"tests/**/*.ts"
		],
		"reporter": [
			"html",
			"lcov",
			"text",
			"text-summary"
		],
		"report-dir": "coverage"
	}
}
